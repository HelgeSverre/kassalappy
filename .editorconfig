root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
max_line_length = 120
ij_visual_guides = 120
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[.flake8]
indent_size = 2

[*.py]
ij_python_from_import_parentheses_force_if_multiline = true

[*.toml]
indent_size = 2
